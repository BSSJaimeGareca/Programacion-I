
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include"math.h"
#include<stdio.h>
using namespace std;

void main()
{
	float π, r, area, perimetro;
	cout << "radio :";
	cin >> r;
	π = 3.141592;
	perimetro = 2*π*r;
	cout << "perimetro: " << perimetro << endl;
	area=pow(r, 2)*π;
	cout << "area: " << area << endl;
	_getwch();  

}



//Pseudocodigo//

Proceso Perimetro_Area_de_una_circunferencia
	Escribir 'radio: '
	Leer r
	p<-3.141592
	P<-2*p*r
	Escribir "Perimetro: ",P
	A<-r*r*p
	Escribir "Area: ",A
FinProceso
